@model ForgotPasswordViewModel

<section class="hero is-fullheight">
    <div class="hero-body">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-4-desktop is-6-tablet">
                    <div class="box">
                        <h3 class="title is-3 has-text-centered">Forgot Password</h3>
                        <p>Please enter your email address:</p>
                        <form asp-route="ForgotPassword">
                            <div class="field">
                                <div class="control">
                                    <input class="input" placeholder="Email" asp-for="Email" autofocus>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <button class="button is-link is-fullwidth" name="button" value="submit">Submit</button>
                                </div>
                            </div>
                            <p class="error has-text-danger" style="white-space: pre-line; display: none;">
                                <partial name="_ValidationSummary" class="error" />
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Optional: Custom styles if needed */
</style>
