
@model LoginInputModel


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="width: 725px; height: auto; text-align: center; ">
 
            <div class="modal-body">
                @if (!string.IsNullOrEmpty(@Model.imageUrl))
                {
                    <img style="height: 351px;" src="@Model.imageUrl"></img>
                }

                <form asp-action="Authenticator">
                    <center style="display:flex">
                        <label style=" padding: 10px; "> Code</label>
                        <input class="form-control" placeholder="GeneratedCode" asp-for="GeneratedCode" autocomplete="off">
                    </center>
                    <div class="modal-footer" style="display:inherit!important">
                        <input type="hidden" class="form-control" style="display:none" asp-for="ReturnUrl" value="@Model.ReturnUrl" autocomplete="off">
                        <input type="hidden" class="form-control" style="display:none" asp-for="imageUrl" value="@Model.imageUrl" autocomplete="off">
                        <button class="login-btn" name="ValidateAuthenticator" value="ValidateAuthenticator">Submit</button>
                        <p class="error" style="white-space: pre-line;  color: #721c24;  background-color: #f8d7da;  border-color: #f5c6cb;     margin-right: 77px;"> @Model.errorMessage </p>
                        <p class="forgottenPassword">@Html.ActionLink("Forgotten password?", "ForgottenPassword", new { controller = "Account" })</p>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


<head>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

</head>

<style>
    .modal-dialog {
        position: absolute;
        left: 0;
        right: 384px;
        top: 0;
        bottom: 328px;
        margin: auto;
        width: 500px;
        height: 300px;
    }
</style>

<script type="text/javascript">
    $(window).on('load', function () {
        $('#myModal').modal({ backdrop: 'static', keyboard: false },'show');
    });

</script>


