@model ResetPasswordViewModel

<section class="hero is-fullheight">
    <div class="hero-body">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-4-desktop is-6-tablet">
                    <div class="box">
                        <h3 class="title is-3 has-text-centered">Password Reset</h3>
                        <p>
                            The password must be at least 8 characters in length and contain at least one uppercase letter, one lowercase letter, one number, and one symbol.
                        </p>
                        <form asp-action="ResetPassword" method="post" class="needs-validation" novalidate>
                            <div class="field">
                                <label for="Password1" class="label">Password</label>
                                <div class="control has-icons-left">
                                    <input asp-for="Password1" id="Password1" class="input" type="password" autocomplete="off" required>
                                    <span class="icon is-small is-left">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                </div>
                                <p asp-validation-for="Password1" class="help is-danger"></p>
                            </div>

                            <div class="field">
                                <label for="Password2" class="label">Repeat Password</label>
                                <div class="control has-icons-left">
                                    <input asp-for="Password2" id="Password2" class="input" type="password" autocomplete="off" required>
                                    <span class="icon is-small is-left">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                </div>
                                <p asp-validation-for="Password2" class="help is-danger"></p>
                            </div>

                            <input type="hidden" asp-for="Email" />

                            <div class="field">
                                <div class="control">
                                    <button type="submit" class="button is-link is-fullwidth">Reset Password</button>
                                </div>
                            </div>

                            <div asp-validation-summary="All" class="has-text-danger"></div>
                        </form>

                        @if (!string.IsNullOrEmpty(Model.Message))
                        {
                         
                                <p class="has-text-centered has-text-success">@Html.Raw(Model.Message)</p>
                                <p class="has-text-centered has-text-success"><a href="https://arschools.app">Return to Login</a></p>
                          
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Optional: Add custom JavaScript for client-side validation or other behaviors
    </script>
}
